<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control'%>
  </div>

  <div>
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control'%>
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>

